<% provide(:title, "Log in") %>
<%= stylesheet_link_tag "/custom.css" %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |form| %>

      <div class="field">
        <%= form.label :email, class: "inputfield" %>
        <%= form.text_field :email, class: 'form-control inputfield' %>
      </div>

       <div class="field">
         <%= form.label :password, class: "inputfield" %>
         <%= form.password_field :password, class: 'form-control inputfield' %>
      </div>

      <div class="field">
      <%= link_to "(forgot password)", new_password_reset_path, class: "blue" %>
    </div>

      <div class="field">
        <%= form.label :remember_me, class: "checkbox inline inputfield" do %>
        <%= form.check_box :remember_me %>
        <span>Remember me on this computer</span>
        <% end %>
      </div>



      <%= form.submit "Log in", class: "button" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
